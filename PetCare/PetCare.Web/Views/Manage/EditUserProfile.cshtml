@using PetCare.Common;

@model PetCare.Web.Models.Manage.EditUserProfileViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditUserProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h3 class="text-center">Edit your profile</h3>
    <hr />

    <div class="form-group">
        <div class="col-md-7 text-center text-danger">
            @Html.ValidationSummary(true, "", new { @class = "coolLi" })
        </div>
    </div>

    @Html.EditorFor(m => m.UserName)
    @Html.EditorFor(m => m.FirstName)
    @Html.EditorFor(m => m.LastName)
    @Html.EditorFor(m => m.PhoneNumber)
    @Html.EditorFor(m => m.ProfilePicture)
    @Html.EditorFor(m => m.Email)

    if (User.IsInRole("vet"))
    {
        @Html.EditorFor(m => m.SergeryLocation)
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edit Profile" />
        </div>
    </div>
}

<div class="text-right">
    @Html.ActionLink("Back to Details", "UserDetails", "Account", null, new { @class = "btn btn-warning" })
</div>
