
@model PetCare.Web.Models.Home.HomePetMixViewModel

@{
    ViewBag.Title = "Home";
}

<br />
<div class="jumbotron text-center" style="background-color:aliceblue">
    <h1>Take Care Of Your Pets</h1>
    <h3>Best place to be caring</h3>
</div>

<div class="text-center">
    <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">Add Your Pet Now</button>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Pet</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("~/Views/Pet/_AddPetPartial.cshtml", Model.AddPetViewModel)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div class="row">
    @Html.Partial("~/Views/Pet/ListPets.cshtml", Model.ListPetsViewModel)
</div>
