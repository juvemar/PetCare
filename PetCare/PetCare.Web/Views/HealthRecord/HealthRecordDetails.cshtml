@model PetCare.Web.Models.HealthRecord.HealthRecordDetails

<h2 class="text-center">@Model.PetName's Health Record</h2>
<hr />
<div>
    <h3>
        @Html.LabelFor(model => model.Weight)
        <em>@Html.DisplayTextFor(model => model.Weight) kg</em>
    </h3>
    <h3>
        @Html.LabelFor(model => model.Height)
        <em>@Html.DisplayTextFor(model => model.Height) cm</em>
    </h3>
    <h3>
        @Html.LabelFor(model => model.FurColor)
        <em>@Html.DisplayTextFor(model => model.FurColor)</em>
    </h3>
    <h3>
        @Html.LabelFor(model => model.Coat)
        <em>@Html.DisplayTextFor(model => model.Coat)</em>
    </h3>

    <div class="row">
        <div class="col-md-6">
            <h3>@Model.PetName's Upcoming Vet Visits</h3>
            @foreach (var vetVisit in Model.UpcomingVetVisits)
            {
                <div>
                    @Html.ActionLink(@vetVisit.Description + " - " + @vetVisit.DateTime, "VetVisitDetails", "VetVisit", new { id = Model.PetId }, new { @class = "btn btn-nextvisit", style = "width:70%" })
                </div>
            }
        </div>

        <div class="col-md-6">
            <h3> @Model.PetName's Vet Visits History</h3>
            @foreach (var vetVisit in Model.PassedVetVisits)
            {
                <div>
                    @Html.ActionLink(@vetVisit.Description + " - " + @vetVisit.DateTime, "VetVisitDetails", "VetVisit", new { id = Model.PetId }, new { @class = "btn btn-info", style = "width:70%" })
                </div>
            }
        </div>
    </div>

    <hr />
    <br />

</div>

<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("Add Vet Visit", "AddVetVisit", "VetVisit", new { id = Model.PetId }, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-6 text-right">
        @Html.ActionLink("Edit", "EditHealthRecord", new { id = Model.PetId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Back to Pet", "PetDetails", "Pet", new { id = Model.PetId }, new { @class = "btn btn-warning" })
    </div>
</div>
